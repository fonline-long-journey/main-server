    class Quickbar : GUIPanel
    {
        bool isHold = false;
        int holdX   = 0;
        int holdY   = 0;

        void OnConstruct() override
        {
            SetPosition( 119, 431 );
            SetSize( 50, 387 );
            SetBackgroundImage( "art/intrface/quickbar_vertical.png" );
        }

        void OnInit() override
        {
            SetPosition(5, 5);
