                if(max > 0 && curr <= max && curr >= 0){
                    max += 1;
                    uint barWidth     = floor( get_Width() * curr / max );
                    uint colorOffsetG = (144-64) * curr / max;
                    uint colorOffsetB = (144-18) * curr / max;
                    uint colorOffsetA = 128 * curr / max;
                    DrawSpritePattern(sprite,-1,AbsolutePosX,AbsolutePosY,barWidth,12,0,0,COLOR_ARGB(128+colorOffsetA,144,144-colorOffsetG,144-colorOffsetB));
