    uint currentLogStrNum = STR_UPDATE_LOG_LATEST;
    void NextLog()
        {
        	if(currentLogStrNum+1 <= STR_UPDATE_LOG_LATEST)
        		currentLogStrNum++;
        }
        		
    void PreviousLog()
        {
            if   (currentLogStrNum-1 >= STR_UPDATE_LOG_BEGIN)
        		currentLogStrNum--;
        }
    

